        return null;
    }
    
    method input(param1) {
        if (param1.event == 2) {
            if (param1.button == 251) {
                if (!(this.cinema1 == null)) {
                    gccinemaengine::stop(this.cinema1);
                }
            }
            if (param1.button == 251) {
                if (!(this.cinema2 == null)) {
                    gccinemaengine::stop(this.cinema2);
                }
            }
            param1.button;
        }
        return null;
    }
    
    method onevent(param1) {
