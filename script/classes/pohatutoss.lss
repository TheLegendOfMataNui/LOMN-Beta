        gccharacter::settohunga(var1, rgba(163, 81, 0, 255), rgba(163, 81, 0, 255), scslosifoundation::stringtoidentifier("mkaa"));
        this.founditem = gcsaver::findmask(scslosifoundation::stringtoidentifier("mska"));
        if (this.founditem) {
