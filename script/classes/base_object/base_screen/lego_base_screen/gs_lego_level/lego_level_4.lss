class lego_level_4 : gs_lego_level {
    
    method lego_level_4() {
        var area;
        this.gs_lego_level("lev4", "kopa", "strt");
        area = new lego_area_visn4(this);
        this.areas.__append(area);
        area = new lego_area_maz14(this);
        this.areas.__append(area);
        area = new lego_area_maz24(this);
        this.areas.__append(area);
        area = new lego_area_tele4(this);
        this.areas.__append(area);
        area = new lego_area_swrd4(this);
        this.areas.__append(area);
        area = new lego_area_boss4(this);
        this.areas.__append(area);
        area = new lego_area_shrn4(this);
        this.areas.__append(area);
        area = new lego_area_brd24(this);
        this.areas.__append(area);
        area = new lego_area_brd34(this);
        this.areas.__append(area);
        area = new lego_area_brd44(this);
        this.areas.__append(area);
        area = new lego_area_snbd4(this);
        this.areas.__append(area);
        area = new lego_area_well4(this);
        this.areas.__append(area);
        area = new lego_area_tura4(this);
        this.areas.__append(area);
        area = new lego_area_strt4(this);
        this.areas.__append(area);
        area = new lego_area_path4(this);
