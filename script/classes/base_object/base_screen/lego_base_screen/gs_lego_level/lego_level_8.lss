class lego_level_8 : gs_lego_level {
    
    method lego_level_8() {
        var area;
        this.gs_lego_level("lev8", "nbua", "kini");
        area = new lego_area_kini(this);
        this.areas.__append(area);
        area = new lego_area_illu(this);
        this.areas.__append(area);
        area = new lego_area_lep3(this);
        this.areas.__append(area);
        area = new lev8_lstn(this);
        this.areas.__append(area);
        area = new lego_area_gvlg(this);
        this.areas.__append(area);
        area = new lego_area_ruin(this);
        this.areas.__append(area);
        area = new lego_area_ptv0(this);
        this.areas.__append(area);
        area = new lev8_trap(this);
        this.areas.__append(area);
        area = new lego_area_ta06(this);
        this.areas.__append(area);
        area = new lev8_labr(this);
        this.areas.__append(area);
        area = new lego_area_clmb(this);
        this.areas.__append(area);
        area = new lego_area_tmbl(this);
        this.areas.__append(area);
        area = new lego_area_endg(this);
        this.areas.__append(area);
        area = new lego_area_ovlg(this);
        this.areas.__append(area);
        area = new lev8_tura(this);
        this.areas.__append(area);
        return null;
    }
    
    method initfull() {
        this.lego_level_initfull();
        globalclass.player.addmask("fake", 1011);
        globalclass.player.maskcontrol.usemasks(0);
        if (globalclass.saverloaded) {
            if (gcsaver::finditema(scslosifoundation::stringtoidentifier("claw"), scslosifoundation::stringtoidentifier("l1a1"))) {
                globalclass.player.setupgrapplinghook();
                globalclass.player.setgrapplinghookdistance(120);
            }
            if (gcsaver::isconditionset(4194304)) {
                globalclass.player.setupgrapplinghook();
                globalclass.player.setgrapplinghookdistance(120);
            }
        }
        globalclass.saverloaded = 0;
        globalclass.unlockdirector.save();
        return null;
    }

    method onevent(param1) {
        this.lego_level_onevent(param1);
        if (param1.eventid == 54) {
            if (param1.args[0] == 1){
                if (this.inwater == 0) {
                    globalclass.player.canshootdragger(0);
                    gcstaticsoundsptrarray::playtablesound(1092);
                    debug::print("IS swimming");
                    this.inwater = 1;
                }
            }
            else if (param1.args[0] == 0) {
                if (this.inwater == 1) {
                    globalclass.player.canshootdragger(1);
                    debug::print("NOT swimming");
                    this.inwater = 0;
                }
            }
        }
        return null;
    }
    
    method initshort() {
        this.lego_level_initshort();
        globalclass.player.addmask("fake", 1011);
        return null;
    }
}