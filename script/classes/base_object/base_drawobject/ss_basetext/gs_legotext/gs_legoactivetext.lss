class gs_legoactivetext : gs_legotext {
    property fontname2;
    property font2;
    property curfont;
    property basex;
    property pad;
    
    method gs_legoactivetext(font1_name, font2_name, string, x_pos, y_pos, z_pos, scale, horizontal_alignment, vertical_alignment, padding1, padding2) {
        this.gs_legotext(font1_name, string, x_pos, y_pos, z_pos, scale, horizontal_alignment, vertical_alignment, padding2);
        this.string = string;
        this.fontname2 = font2_name;
        this.curfont = 0;
        if (padding1 == null) {
            this.pad = -11;
        }
        else {
            this.pad = padding1;
        }
        return null;
    }
    
    method initfull() {
        this.font = globalclass.getgamefont(this.fontname);
        this.font2 = globalclass.getgamefont(this.fontname2);
        if (this.curfont == 0) {
            this.text = sctextobject::create(this.x1, this.y1, this.z, this.font, this.string);
        }
        else {
            this.text = sctextobject::create(this.x1, this.y1, this.z, this.font2, this.string);
        }
        this.scalefont(this.scale);
        this.setjustification(this.horizontal, this.verticle);
        sctilefont::enabletransparency(this.font, 1);
        return null;
    }
    
    method initshort() {
        this.font = globalclass.getgamefont(this.fontname);
        this.font2 = globalclass.getgamefont(this.fontname2);
        if (this.curfont == 0) {
            this.text = sctextobject::create(this.x1, this.y1, this.z, this.font, this.string);
        }
        else {
            this.text = sctextobject::create(this.x1, this.y1, this.z, this.font2, this.string);
        }
        this.scalefont(this.scale);
        this.setjustification(this.horizontal, this.verticle);
        sctilefont::enabletransparency(this.font, 1);
        return null;
    }
    
    method cleanupfull() {
        this.font = null;
        this.font2 = null;
        this.text = null;
        return null;
    }
    
    method cleanupshort() {
        this.font = null;
        this.font2 = null;
        this.text = null;
        return null;
    }
    
    method setactive(param1) {
        if (this.curfont != 1) {
            sctextobject::setfont(this.text, this.font2);
            this.setpos(this.x1 + (this.pad * this.scale), this.y1 - this.padadjustment, this.z);
            this.curfont = 1;
        }
        return null;
    }
    
    method setinactive() {
        if (this.curfont != 0) {
            sctextobject::setfont(this.text, this.font);
            this.curfont = 0;
            this.setpos(this.x1 - (this.pad * this.scale), this.y1 - this.padadjustment, this.z);
        }
        return null;
    }
    
    method getactive() {
        return this.curfont;
    }
    
    method scalefont(param1) {
        this.scale = param1;
        sctextobject::setscale(this.text, this.scale, this.scale);
        return null;
    }
}