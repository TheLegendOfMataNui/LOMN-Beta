class lego_area_mana : gs_lego_area {
    property puzzle;
    property saved;
    
    method lego_area_mana(param1) {
        this.gs_lego_area("mana", param1, 0, 0);
        this.puzzle = new puzzle_mana7(this);
        this.lego_area_initfull();
        this.saved = 0;
        return null;
    }
    
    method initfull() {
        this.lego_area_show();
        this.puzzle.initfull();
        return null;
    }
    
    method cleanupfull() {
        this.lego_area_hide();
        this.puzzle.cleanupfull();
        return null;
    }
    
    method process(param1) {
        this.puzzle.process(param1);
        return null;
    }
    
    method onevent(param1) {
        if (this.saved == 0) {
            BetterSaver::Save();
            this.saved = 1;
        }
        this.puzzle.onevent(param1);		
        return null;
    }
    
    method input(param1) {
        this.puzzle.input(param1);
        return null;
    }
    
    method exit() {
        this.lego_area_cleanupfull();
        if (this.puzzle != null) {
            this.puzzle.exit();
            this.puzzle = null;
        }
        return null;
    }
}