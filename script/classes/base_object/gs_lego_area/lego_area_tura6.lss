class lego_area_tura6 : gs_lego_area {
    property vakama;
    property vakama2;
    property hidehud;
    
    method lego_area_tura6(param1) {
        this.gs_lego_area("tura", param1, 0, 0);
        this.lego_area_initfull();
        return null;
    }
    
    method initfull() {
        this.lego_area_show();
        globalclass.player.processequipment(2);
        gcmodeldirector::setnearestmax(3);
        gcareadirector::setnearestmax(3);
        gcareadirector::setfog(-4513246, 0 - 1.0, 0 - 900.0, 0.05);
        gclightdirector::setcavelighting(1);
        globalclass.bgmusic.changefilename("Root/Data/sounds/MusicVillage");
        globalclass.bgmusic.play(1);

        //Setting up two Vakamas to bypass conversation issue by splitting it into 2 instances
        if (gcsaver::isconditionset(8) == 0) {
            //Set the first Vakama
            this.vakama = gcmodeldirector::getcharacter(scslosifoundation::stringtoidentifier("vaka"));   
            gccharacter::setorientation(this.vakama, 0);
            gccharacter::setinputstate(this.vakama, scslosifoundation::stringtoidentifier("none"));
            gccharacter::switchanimation(this.vakama, scslosifoundation::stringtoidentifier("va00"), -1);
            gcmodeldirector::hide(scslosifoundation::stringtoidentifier("va01"), 0);
        }
        else {
            //Condition met, set second Vakama
            this.vakama2 = gcmodeldirector::getcharacter(scslosifoundation::stringtoidentifier("va01"));   
            gccharacter::setorientation(this.vakama2, 0);
            gccharacter::setinputstate(this.vakama2, scslosifoundation::stringtoidentifier("none"));
            gccharacter::switchanimation(this.vakama2, scslosifoundation::stringtoidentifier("va00"), -1);
            gcmodeldirector::hide(scslosifoundation::stringtoidentifier("vaka"), 0);
        }

        //Check if gcsaver returns true on portalactive and if so, enable portal.  Else, disable trigger
        if (gcsaver::portalactive() == 1) {
            gccollisionphysicsgroup::setportal(scslosifoundation::stringtoidentifier("tps9"), "root/data/art/portals/tahu/shrine_ripple/t_shrn_ptl", 1);
            gcmodeldirector::hide(scslosifoundation::stringtoidentifier("vaka"), 0);  
            gcmodeldirector::hide(scslosifoundation::stringtoidentifier("va01"), 0);  
        }
        else {
            gccollisionphysicsgroup::turnoffnextarea(scslosifoundation::stringtoidentifier("tps9"));
        }

        //Warped in from the Takara, force conversation with secondary Vakama instance
        if ((bettersaver::getbooleanvalue(87) == 1) && (bettersaver::getbooleanvalue(94) == 0)) {
            this.hidehud = 1;
            gcmodeldirector::show(scslosifoundation::stringtoidentifier("va01"), 0);  
            gcconversationengine::forceconversation(gcconversationengine::getconversationengine(), scslosifoundation::stringtoidentifier("va01"));
            bettersaver::togglebooleanvalue(94); 
        }
        return null;
    }
    
    method cleanupfull() {
        this.lego_area_hide();
        this.vakama = null;
        this.vakama2 = null;
        return null;
    }
    
    method process(param1) {
        return null;
    }
    
    method onevent(param1) {
        if (param1.eventid == 29) {
            if (this.hidehud == 1) {
                globalclass.hud.hide();
                this.hidehud = null;
            }
        }
        return null;
    }
    
    method input(param1) {
        return null;
    }
    
    method exit() {
        this.lego_area_cleanupfull();
        return null;
    }
}