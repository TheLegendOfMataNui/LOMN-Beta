    }
    
    method initfull() {
        this.lego_area_show();
        var turaga = gcmodeldirector::getcharacter(scslosifoundation::stringtoidentifier("vaka"));   
        gccharacter::setorientation(turaga, 0);
        gccharacter::setinputstate(turaga, scslosifoundation::stringtoidentifier("none"));
        gccharacter::switchanimation(turaga, scslosifoundation::stringtoidentifier("va00"), -1);
        globalclass.player.processequipment(2);
        if (gcsaver::portalactive() == 1) {
            gccollisionphysicsgroup::setportal(scslosifoundation::stringtoidentifier("tps9"), "root/data/art/portals/tahu/shrine_ripple/t_shrn_ptl", 1);
            gcmodeldirector::hide(scslosifoundation::stringtoidentifier("vaka"), 0);  
        }
        else {
            gccollisionphysicsgroup::turnoffnextarea(scslosifoundation::stringtoidentifier("tps9"));
        }
        globalclass.bgmusic.changefilename("Root/Data/sounds/MusicVillage");
        globalclass.bgmusic.play(1);
        return null;
    }
    
    method process(param1) {
        return null;
    }
    
    method input(param1) {
        return null;
    }
    
    method onevent(param1) {
        if (param1.eventid == 27) {
            globalclass.player.unkill();
            globalclass.player.actor.gotopos(scslosifoundation::stringtoidentifier("str0"), scslosifoundation::stringtoidentifier("lok0"));
            globalclass.player.actor.setinputstate("ninp");
            globalclass.level.cam.setaimode(11);
        }
        return null;
    }
    
    method cleanupfull() {
        this.lego_area_hide();
        return null;
    }
    
    method exit() {
        this.lego_area_cleanupfull();
        return null;
    }
}