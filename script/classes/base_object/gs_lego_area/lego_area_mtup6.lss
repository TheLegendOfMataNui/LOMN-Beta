class lego_area_mtup6 : gs_lego_area {
    property cinema;
    property saved;
    property safecount;
    
    method lego_area_mtup6(param1) {
        this.gs_lego_area("mtup", param1, 0, 0);
        this.lego_area_initfull();
        this.saved = 0;
        return null;
    }
    
    method initfull() {
        this.lego_area_show();
        gcareadirector::setfog(-4513246, 0 - 1.0, 0 - 900.0, 0.05);
        if (gcsaver::findcinema(scslosifoundation::stringtoidentifier("cin1")) == 0) {
            this.cinema = gccinemaengine::create();
            gccinemaengine::load(this.cinema, "cin1");
            gccinemaengine::play(this.cinema);
        }
        else {
            globalclass.bgmusic.changefilename("Root/Data/sounds/spiderwebambience");
            globalclass.bgmusic.play();
        }
        this.safecount = 0;
        return null;
    }
    
    method cleanupfull() {
        this.lego_area_hide();
        this.cinema = null;
        this.safecount = null;
        return null;
    }
    
    method input(param1) {
        if (param1.event == 2) {
            if (param1.button == 251) {
                if (this.cinema != null) {
                    gccinemaengine::stop(this.cinema);
                }
            }
        }
        return null;
    }
    
    method onevent(param1) {
        var lewa;
        if (this.saved == 0) {
            BetterSaver::Save();
            this.saved = 1;
        }
        if (param1.eventid == 44) {
            if (this.cinema != null) {
                if (this.safecount < 3) {
                    this.safecount = this.safecount + 1;
                    if (this.safecount == 2) {
                        lewa = gcmodeldirector::getcharacter(scslosifoundation::stringtoidentifier("lewa"), 0);    
                        gccharacter::addpart(lewa, "lewa/haxe", 1);
                    }
                }
            }
        }
        else if (param1.eventid == 30) {
            globalclass.player.maskcontrol.changemask(4);
            globalclass.bgmusic.changefilename("Root/Data/sounds/spiderwebambience");
            globalclass.bgmusic.play();
        }
        return null;
    }
    
    method exit() {
        this.lego_area_cleanupfull();
        return null;
    }
}