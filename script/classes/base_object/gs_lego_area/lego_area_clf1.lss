class lego_area_clf1 : gs_lego_area {
    property puzzle;
    
    method lego_area_clf1(param1) {
        this.gs_lego_area("clf1", param1, 0, 0);
        this.lego_area_initfull();
        this.puzzle = new cliff1_puzzle(this);
        return null;
    }
    
    method initfull() {
        this.lego_area_show();
        this.puzzle.initfull();
        return null;
    }
    
    method onevent(param1) {
        this.puzzle.onevent(param1);
        return null;
    }
    
    method cleanupfull() {
        this.lego_area_hide();
        this.puzzle.cleanupfull();
        return null;
    }
    
    method exit() {
        this.lego_area_cleanupfull();
        if (this.puzzle != null) {
            this.puzzle.exit();
            this.puzzle = null;
        }
        return null;
    }
}