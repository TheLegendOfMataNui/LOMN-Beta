class lego_area_mbch2 : gs_lego_area {
    property puzzle;
    
    method lego_area_mbch2(param1) {
        this.gs_lego_area("mbch", param1, 0, 0);
        this.puzzle = new mbch2_puzzle(this);
        this.lego_area_initfull();
        return null;
    }
    
    method initfull() {
        this.lego_area_show();
        this.puzzle.initfull();
        gcareadirector::setfog(-402183, 0 - 30.0, 0 - 1200.0, 0.05);
        gclightdirector::setcavelighting(0);
        gcareadirector::setnearestmax(50);
        globalclass.enemy.killheight = 299;
        return null;
    }
    
    method cleanupfull() {
        this.lego_area_hide();
        this.puzzle.cleanupfull();
        return null;
    }
    
    method onevent(param1) {
        this.puzzle.onevent(param1);
        return null;
    }
    
    method input(param1) {
        this.puzzle.input(param1);
        return null;
    }
    
    method process(param1) {
        this.puzzle.process(param1);
        return null;
    }
    
    method exit() {
        this.lego_area_cleanupfull();
        if (this.puzzle != null) {
            this.puzzle.exit();
            this.puzzle = null;
        }
        return null;
    }
}