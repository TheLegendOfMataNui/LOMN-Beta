class lego_area_mtup2 : gs_lego_area {
    property cinema;
    property saved;
    
    method lego_area_mtup2(param1) {
        this.gs_lego_area("mtup", param1, 0, 0);
        this.lego_area_initfull();
        this.saved = 0;
        return null;
    }
    
    method initfull() {
        this.lego_area_show();
        gcmodeldirector::setnearestmax(7);
        gcareadirector::setnearestmax(7);
        gcareadirector::setfog(-9143565, 0 - 1000.0, 0 - 50000.0, 0.01);
        gclightdirector::setcavelighting(0);
        globalclass.bgmusic.stop();
        this.cinema = gccinemaengine::create();
        gccinemaengine::load(this.cinema, "cin1");
        gccinemaengine::play(this.cinema);
        gccinemaengine::setnextarea(this.cinema, scslosifoundation::stringtoidentifier("bech"));
        globalclass.hud.cutscene_warp = 1;
        return null;
    }
    
    method cleanupfull() {
        this.lego_area_hide();
        this.cinema = null;
        return null;
    }
    
    method onevent(param1) {
        if (this.saved == 0) {
            BetterSaver::Save();
            this.saved = 1;
        }
        if (param1.eventid == 30) {
            this.level.cam.setaimode(9);
            globalclass.player.maskcontrol.changemask(0);
        }
        return null;
    }
    
    method input(param1) {
        if (param1.event == 2) {
            if (param1.button == 251) {
                if (this.cinema != null) {
                    gccinemaengine::stop(this.cinema);
                    globalclass.bgmusic.stop();
                }
            }
        }
        return null;
    }
    
    method exit() {
        this.lego_area_cleanupfull();
        return null;
    }
}