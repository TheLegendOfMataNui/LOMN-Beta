class lego_area_tura1 : gs_lego_area {
    property legendplayed;
    property blorpo;
    
    method lego_area_tura1(param1) {
        this.gs_lego_area("tura", param1, 0, 0);
        this.lego_area_initfull();
        return null;
    }
    
    method initfull() {
        this.playlegend();
        this.lego_area_show();
        var turaga = gcmodeldirector::getcharacter(scslosifoundation::stringtoidentifier("when"));   
        gccharacter::setorientation(turaga, 0);
        gccharacter::setinputstate(turaga, scslosifoundation::stringtoidentifier("none"));
        gccharacter::switchanimation(turaga, scslosifoundation::stringtoidentifier("wh00"), -1);
        gcareadirector::setfog(-402183, 0 - 40.0, 0 - 1200.0, 0.05);
        gclightdirector::setcavelighting(1);
        gcareadirector::setnearestmax(3);
        gcmodeldirector::setnearestmax(3);
        if (gcsaver::portalactive() == 1) {
            gccollisionphysicsgroup::setportal(scslosifoundation::stringtoidentifier("tps9"), "root/data/art/portals/onua/shrine_ripple/o_shrn_ptl", 1);
            gcmodeldirector::hide(scslosifoundation::stringtoidentifier("when"), 0);  
        }
        else {
            gccollisionphysicsgroup::turnoffnextarea(scslosifoundation::stringtoidentifier("tps9"));
        }
        globalclass.bgmusic.changefilename("Root/Data/sounds/MusicVillage");
        globalclass.bgmusic.play(1);

        //Set Tohunga: Blorpo (VLGR)
        if (bettersaver::getbooleanvalue(88) == 1) {
            this.blorpo = gcmodeldirector::getcharacter(scslosifoundation::stringtoidentifier("vlgr"), 0);
            gccharacter::settohunga(this.blorpo, rgba(0, 125, 99, 255), rgba(102, 0, 102, 255), scslosifoundation::stringtoidentifier("mk0a"));
            gccharacter::setcolors(this.blorpo, rgba(0, 125, 99, 255), rgba(102, 0, 102, 255), rgba(255, 255, 255, 255));
            gccharacter::setorientation(this.blorpo, 40);
            gccharacter::setupstationary(this.blorpo);
            gccharacter::setinputstate(this.blorpo, scslosifoundation::stringtoidentifier("none"));
            gccharacter::switchanimation(this.blorpo, scslosifoundation::stringtoidentifier("d000"), -1);
        }
        else {
            gcmodeldirector::hide(scslosifoundation::stringtoidentifier("vlgr"), 0);
        }
        return null;
    }
    
    method process(param1) {
        return null;
    }
    
    method input(param1) {
        return null;
    }
    
    method onevent(param1) {
        if (param1.eventid == 29) {
            if (this.legendplayed == 1) {
                globalclass.hud.hide();
                this.legendplayed = null;
            }
        }
        else if (param1.eventid == 3) {
            if (param1.args[0] == scslosifoundation::stringtoidentifier("blpo")) {
                if (bettersaver::getbooleanvalue(88) == 1) {
                    gccharacter::setorientation(this.blorpo, 200);
                    gccharacter::switchanimation(this.blorpo, scslosifoundation::stringtoidentifier("d003"), -1);
                    gccharacter::setanimationscalar(this.blorpo, 3);
                    gccharacter::interpolate(this.blorpo, -4, -5, -22, 0.2);                                     
                    bettersaver::setbooleanvalue(88, 0);
                    debug::print("YOU SAW NOTHING FOOL!");
                }
            }
        }
        return null;
    }
    
    method cleanupfull() {
        if (this.legendplayed != null) {
            this.legendplayed = null;
        }
        this.lego_area_hide();       
        return null;
    }
    
    method exit() {
        this.lego_area_cleanupfull();
        return null;
    }
    
    method playlegend() {
        var var1;
        if (bettersaver::getbooleanvalue(50) == 0) {
            this.legendplayed = 1;
            if (gcareadirector::getlanguage() == 0) {
                gchuddirector::playcinematic("Root/Data/cinematics/LegendFMVEn.bik", 1);
            }
            if (gcareadirector::getlanguage() == 1) {
                gchuddirector::playcinematic("Root/Data/cinematics/LegendFMVFr.bik", 1);
            }
            if (gcareadirector::getlanguage() == 2) {
                gchuddirector::playcinematic("Root/Data/cinematics/LegendFMVGer.bik", 1);
            }
            if (gcareadirector::getlanguage() == 3) {
                gchuddirector::playcinematic("Root/Data/cinematics/LegendFMVDa.bik", 1);
            }
            if (gcareadirector::getlanguage() == 4) {
                gchuddirector::playcinematic("Root/Data/cinematics/LegendFMVDu.bik", 1);
            }
            if (gcareadirector::getlanguage() == 5) {
                gchuddirector::playcinematic("Root/Data/cinematics/LegendFMVIt.bik", 1);
            }
            if (gcareadirector::getlanguage() == 6) {
                gchuddirector::playcinematic("Root/Data/cinematics/LegendFMVSpa.bik", 1);
            }
            if (gcareadirector::getlanguage() == 7) {
                gchuddirector::playcinematic("Root/Data/cinematics/LegendFMVSwe.bik", 1);
            }
            var1 = gcconversationengine::getconversationengine();
            gcconversationengine::forceconversation(var1, 2003330414);
        }
        return null;
    }
}