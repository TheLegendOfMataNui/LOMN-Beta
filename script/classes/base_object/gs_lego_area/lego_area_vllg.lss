class lego_area_vllg : gs_lego_area {
    property puzzle;
    
    method lego_area_vllg(param1) {
        this.gs_lego_area("vllg", param1, 0, 0);
        this.lego_area_initfull();
        this.puzzle = new onakoro_puzzle();
        return null;
    }
    
    method initfull() {
        this.lego_area_show();
        gcareadirector::setfog(-402183, 0 - 40.0, 0 - 1200.0, 0.05);
        gclightdirector::setcavelighting(1);
        gcareadirector::setnearestmax(6);
        gcmodeldirector::setnearestmax(15);
        this.puzzle.initfull();
        return null;
    }
    
    method input(param1) {
        return null;
    }
    
    method onevent(param1) {
        this.puzzle.onevent(param1);
        if (param1.eventid == 46) {
            gccollisionphysicsgroup::spinmask(1.2);
        }
        else if (param1.eventid == 27) {
            globalclass.player.actor.gotostartpos(scslosifoundation::stringtoidentifier("str0"), scslosifoundation::stringtoidentifier("lok0"));
            globalclass.player.unkill();
            globalclass.player.actor.setinputstate("ninp");
            this.level.cam.setaimode(11);
        }
        return null;
    }
    
    method process(param1) {
        this.puzzle.process(param1);
        return null;
    }
    
    method cleanupfull() {
        this.lego_area_hide();
        this.puzzle.cleanupfull();
        return null;
    }
    
    method exit() {
        this.lego_area_cleanupfull();
        this.puzzle.exit();
        this.puzzle = null;
        return null;
    }
}