class lego_area_tura3 : gs_lego_area {
    property onewa;
    property onewa2;
    property hidehud;
    
    method lego_area_tura3(param1) {
        this.gs_lego_area("tura", param1, 0, 0);
        this.lego_area_initfull();
        return null;
    }
    
    method initfull() {
        this.lego_area_show();
        gcareadirector::setnearestmax(20);
        gcmodeldirector::setnearestmax(10);
        gcareadirector::setfog(-1, 0 - 20.0, 0 - 600.0, 0.05);
        gclightdirector::setcavelighting(1);
        globalclass.bgmusic.changefilename("Root/Data/sounds/MusicVillage");
        globalclass.bgmusic.play(1);

        //Setting up two Onewas to bypass conversation issue by splitting it into 2 instances
        if (gcsaver::isconditionset(8) == 0) {
            //Set the first Onewa
            this.onewa = gcmodeldirector::getcharacter(scslosifoundation::stringtoidentifier("oewa"));   
            gccharacter::setorientation(this.onewa, 0);
            gccharacter::setinputstate(this.onewa, scslosifoundation::stringtoidentifier("none"));
            gccharacter::switchanimation(this.onewa, scslosifoundation::stringtoidentifier("oe00"), -1);
            gcmodeldirector::hide(scslosifoundation::stringtoidentifier("oe01"), 0);
        }
        else {
            //Condition met, set second Onewa
            this.onewa2 = gcmodeldirector::getcharacter(scslosifoundation::stringtoidentifier("oe01"));   
            gccharacter::setorientation(this.onewa2, 0);
            gccharacter::setinputstate(this.onewa2, scslosifoundation::stringtoidentifier("none"));
            gccharacter::switchanimation(this.onewa2, scslosifoundation::stringtoidentifier("oe00"), -1);
            gcmodeldirector::hide(scslosifoundation::stringtoidentifier("oewa"), 0);
        }

        //Check if gcsaver returns true on portalactive and if so, enable portal.  Else, disable trigger
        if (gcsaver::portalactive() == 1) {
            gccollisionphysicsgroup::setportal(scslosifoundation::stringtoidentifier("tps9"), "root/data/art/portals/poha/shrine_ripple/p_shrn_ptl", 1);
            gcmodeldirector::hide(scslosifoundation::stringtoidentifier("oewa"), 0);  
            gcmodeldirector::hide(scslosifoundation::stringtoidentifier("oe01"), 0);  
        }
        else {
            gccollisionphysicsgroup::turnoffnextarea(scslosifoundation::stringtoidentifier("tps9"));
        }

        //Warped in from the Takara, force conversation with secondary Onewa instance
        if ((bettersaver::getbooleanvalue(84) == 1) && (bettersaver::getbooleanvalue(91) == 0)) {
            this.hidehud = 1;
            gcmodeldirector::show(scslosifoundation::stringtoidentifier("oe01"), 0);  
            gcconversationengine::forceconversation(gcconversationengine::getconversationengine(), scslosifoundation::stringtoidentifier("oe01"));
            bettersaver::togglebooleanvalue(91); 
        }
        return null;
    }
    
    method cleanupfull() {
        this.lego_area_hide();
        this.onewa = null;
        this.onewa2 = null;
        return null;
    }
    
    method process(param1) {
        return null;
    }
    
    method onevent(param1) {
        if (param1.eventid == 29) {
            if (this.hidehud == 1) {
                globalclass.hud.hide();
                this.hidehud = null;
            }
        }
        return null;
    }
    
    method input(param1) {
        return null;
    }
    
    method exit() {
        this.lego_area_cleanupfull();
        return null;
    }
}