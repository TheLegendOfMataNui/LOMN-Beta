class lego_area_tura5 : gs_lego_area {
    property crashbandicootwarped;
    property warpsound;

    method lego_area_tura5(param1) {
        this.gs_lego_area("tura", param1, 0, 0);
        this.lego_area_initfull();
        return null;
    }
    
    method initfull() {
        this.crashbandicootwarped = 0;
        this.warpsound = new tablecopysound(1094);
        this.lego_area_show();
        globalclass.player.processequipment(2);
        if (gcsaver::portalactive() == 1) {
            gccollisionphysicsgroup::setportal(scslosifoundation::stringtoidentifier("tps9"), "root/data/art/portals/lewa/shrine_ripple/l_shrn_ptl", 0);
            gcmodeldirector::hide(scslosifoundation::stringtoidentifier("mata"), 0);  
        }
        else {
            gccollisionphysicsgroup::turnoffnextarea(scslosifoundation::stringtoidentifier("tps9"));
        }
        globalclass.bgmusic.changefilename("Root/Data/sounds/MusicVillage");
        globalclass.bgmusic.play(1);
        return null;
    }
    
    method process(param1) {
        return null;
    }
    
    method input(param1) {
        return null;
    }
    
    method onevent(param1) {
        if ((param1.eventid == 4) && (this.crashbandicootwarped == 0) && (gcsaver::portalactive() == 1)) {
            if (param1.args[0] == scslosifoundation::stringtoidentifier("tps9")) {
                this.warpsound.play(0);
                this.crashbandicootwarped = 1;
                debug::print("WOAH!");
            }
        }
        return null;
    }
    
    method cleanupfull() {
        this.lego_area_hide();
        this.warpsound.stopreset(0);
        this.crashbandicootwarped = null;
        return null;
    }
    
    method exit() {
        this.lego_area_cleanupfull();
        return null;
    }
}