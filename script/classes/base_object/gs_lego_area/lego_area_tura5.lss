class lego_area_tura5 : gs_lego_area {
    property matau;
    property matau2;
    property hidehud;

    method lego_area_tura5(param1) {
        this.gs_lego_area("tura", param1, 0, 0);
        this.lego_area_initfull();
        return null;
    }
    
    method initfull() {
        this.lego_area_show();
        globalclass.player.processequipment(2);
        gcmodeldirector::setnearestmax(3);
        gcareadirector::setnearestmax(3);
        gcareadirector::setfog(-10381892, 0 - 5.0, 0 - 600.0, 0.01);
        gclightdirector::setcavelighting(1);
        globalclass.bgmusic.changefilename("Root/Data/sounds/MusicVillage");
        globalclass.bgmusic.play(1);

        //Setting up two Mataus to bypass conversation issue by splitting it into 2 instances
        if (gcsaver::isconditionset(8) == 0) {
            //Set the first Matau
            this.matau = gcmodeldirector::getcharacter(scslosifoundation::stringtoidentifier("mata"));   
            gccharacter::setorientation(this.matau, 0);
            gccharacter::setinputstate(this.matau, scslosifoundation::stringtoidentifier("none"));
            gccharacter::switchanimation(this.matau, scslosifoundation::stringtoidentifier("ma00"), -1);
            gcmodeldirector::hide(scslosifoundation::stringtoidentifier("ma01"), 0);
        }
        else {
            //Condition met, set second Matau
            this.matau2 = gcmodeldirector::getcharacter(scslosifoundation::stringtoidentifier("ma01"));   
            gccharacter::setorientation(this.matau2, 0);
            gccharacter::setinputstate(this.matau2, scslosifoundation::stringtoidentifier("none"));
            gccharacter::switchanimation(this.matau2, scslosifoundation::stringtoidentifier("ma00"), -1);
            gcmodeldirector::hide(scslosifoundation::stringtoidentifier("mata"), 0);
        }

        //Check if gcsaver returns true on portalactive and if so, enable portal.  Else, disable trigger
        if (gcsaver::portalactive() == 1) {
            gccollisionphysicsgroup::setportal(scslosifoundation::stringtoidentifier("tps9"), "root/data/art/portals/lewa/shrine_ripple/l_shrn_ptl", 0);
            gcmodeldirector::hide(scslosifoundation::stringtoidentifier("mata"), 0);  
            gcmodeldirector::hide(scslosifoundation::stringtoidentifier("ma01"), 0);  
        }
        else {
            gccollisionphysicsgroup::turnoffnextarea(scslosifoundation::stringtoidentifier("tps9"));
        }

        //Warped in from the Takara, force conversation with secondary Matau instance
        if ((bettersaver::getbooleanvalue(86) == 1) && (bettersaver::getbooleanvalue(93) == 0)) {
            this.hidehud = 1;
            gcmodeldirector::show(scslosifoundation::stringtoidentifier("ma01"), 0);  
            gcconversationengine::forceconversation(gcconversationengine::getconversationengine(), scslosifoundation::stringtoidentifier("ma01"));
            bettersaver::togglebooleanvalue(93); 
        }
        return null;
    }
    
    method cleanupfull() {
        this.lego_area_hide();
        this.matau = null;
        this.matau = null;
        return null;
    }
    
    method process(param1) {
        return null;
    }
    
    method onevent(param1) {
        if (param1.eventid == 29) {
            if (this.hidehud == 1) {
                globalclass.hud.hide();
                this.hidehud = null;
            }
        }
        return null;
    }
    
    method input(param1) {
        return null;
    }
    
    method exit() {
        this.lego_area_cleanupfull();
        return null;
    }
}