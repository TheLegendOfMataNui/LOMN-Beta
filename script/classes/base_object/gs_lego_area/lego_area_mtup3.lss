class lego_area_mtup3 : gs_lego_area {
    property puzzle;
    property saved;
    
    method lego_area_mtup3(param1) {
        this.gs_lego_area("mtup", param1, 0, 0);
        this.puzzle = new mtup3_class(this);
        this.lego_area_initfull();
        this.saved = 0;
        return null;
    }
    
    method initfull() {
        this.lego_area_show();
        this.puzzle.initfull();
        gcareadirector::setnearestmax(50);
        gcmodeldirector::setnearestmax(10);
        gcareadirector::setfog(-1, 0 - 20.0, 0 - 600.0, 0.05);
        gclightdirector::setcavelighting(0);
        globalclass.bgmusic.changefilename("Root/Data/sounds/MusicPohatuAmbience");
        globalclass.bgmusic.play(1);
        return null;
    }
    
    method process(param1) {
        this.puzzle.process(param1);
        return null;
    }
    
    method input(param1) {
        this.puzzle.input(param1);
        return null;
    }
    
    method onevent(param1) {
        if (this.saved == 0) {
            BetterSaver::Save();
            this.saved = 1;
        }
        this.puzzle.onevent(param1);
        return null;
    }
    
    method cleanupfull() {
        this.lego_area_hide();
        this.puzzle.cleanupfull();
        return null;
    }
    
    method exit() {
        this.lego_area_cleanupfull();
        if (this.puzzle != null) {
            this.puzzle.exit();
            this.puzzle = null;
        }
        return null;
    }
}