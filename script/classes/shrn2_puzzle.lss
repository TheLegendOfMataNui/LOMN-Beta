                    else {
                        this.bossdoortext1.show();
                        this.bossdoortext2.show();
                        this.bossdoortexttimer = 1.0;
                    }
                }
            }
        }
        else if (param1.eventid == 41) {
            if ((this.portalactive == 0) && (bettersaver::getbooleanvalue(75))) {
                portal_trigger = scslosifoundation::stringtoidentifier("tps9");
                gccollisionphysicsgroup::setportal(portal_trigger, "root/data/art/portals/gali/village_ripple/g_prtl", 1);
                this.portalactive = 1;
            }
            if (bettersaver::getbooleanvalue(75)) {
                //TALKED TO NOKAMA
                this.waterfall1.hide();
            }
        }
        else if (param1.eventid == 35) {
            if (param1.args[0] == scslosifoundation::stringtoidentifier("dor4")) {
                //EXIT: TO BOSS               
                this.doors[3].hide();
                bettersaver::setbooleanvalue(66, 1);
            }
        }
        else if (param1.eventid == 44) {
            if ((this.parent.enterstartid == scslosifoundation::stringtoidentifier("str6")) && (bettersaver::getbooleanvalue(76) == 0)) {
                //ENTERED FROM: GLY1                
                this.waterfall3.hide();
                bettersaver::setbooleanvalue(76, 1);
            }
            if ((this.parent.enterstartid == scslosifoundation::stringtoidentifier("str4")) && (bettersaver::getbooleanvalue(77) == 0)) {
                //ENTERED FROM: GLY2
                this.waterfall2.hide();
                bettersaver::setbooleanvalue(77, 1);
            }
            if ((this.parent.enterstartid == scslosifoundation::stringtoidentifier("str1")) && (bettersaver::getbooleanvalue(78) == 0)) {
                //ENTERED FROM: GL3S
                bettersaver::setbooleanvalue(78, 1);
            }
            else if (this.inwater == 1) {
                if ((this.parent.enterstartid == scslosifoundation::stringtoidentifier("str1")) || (this.parent.enterstartid == scslosifoundation::stringtoidentifier("str7")) || (this.parent.enterstartid == scslosifoundation::stringtoidentifier("str9")) || ((this.parent.enterstartid == scslosifoundation::stringtoidentifier("str0")) && (globalclass.player.crashbandicootwarped == 2))) {
                    //SHOULD NOT SPAWN IN WATER
                    globalclass.player.underwater = 0;
                    globalclass.player.isswimming();              
                }
                else {
                    //SHOULD SPAWN IN WATER
                    globalclass.player.underwater = 1;
                    globalclass.player.isswimming();
                }            
            }
            this.inwater = 0;
        }
        return null;
    }
    
