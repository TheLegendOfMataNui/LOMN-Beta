                }
            }
            if (param1.args[1] == scslosifoundation::stringtoidentifier("dor4")) {
                if (this.showbossdoor == 1) {
                    if (((((globalclass.player.tokens >= 60) && (globalclass.player.maskcontrol.isselectable(1)) && (globalclass.player.maskcontrol.isselectable(9)) && (globalclass.player.actor.ishookenabled) && (globalclass.player.haselement()))))) {
