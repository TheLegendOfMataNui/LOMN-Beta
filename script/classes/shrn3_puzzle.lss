class shrn3_puzzle {
    property parent;
    property camefromglyph3area;
    property canhitgly3triggerplane;
    property bkikbossdoor;
    property gly3door;
    property portalactive;
    property bossdoortext;
    property bossdoortexttimer;
    property showbossdoor;
    property crashbandicootwarped;
    
    method shrn3_puzzle(param1) {
        this.parent = param1;
        this.showbossdoor = 1;
        return null;
    }
    
    method initfull() {
        var onewa;
        var portal_trigger;
        var door_text;
        this.crashbandicootwarped = 0;
        globalclass.bgmusic.changefilename("Root/Data/sounds/MusicShrine");
        globalclass.bgmusic.play(1);
        gcareadirector::setnearestmax(50);
        gcmodeldirector::setnearestmax(10);
        gcareadirector::setfog(-1, 0 - 20.0, 0 - 600.0, 0.05);
        gclightdirector::setcavelighting(0);
        this.bkikbossdoor = new lego_moveableobject("drs0", "fake");
        this.gly3door = new lego_moveableobject("drs4", "fake");
        this.bkikbossdoor.initfull();
        this.gly3door.initfull();
        this.bkikbossdoor.setresponse(3, 3, 3);
        this.gly3door.setresponse(3, 3, 3);
        this.gly3door.settweakable();
        this.camefromglyph3area = 0;
        this.canhitgly3triggerplane = 0;
        onewa = gcmodeldirector::getcharacter(scslosifoundation::stringtoidentifier("oewa"), 0);
        gccharacter::setinputstate(onewa, scslosifoundation::stringtoidentifier("none"));
        gccharacter::switchanimation(onewa, scslosifoundation::stringtoidentifier("oe00"), -1);
        portal_trigger = scslosifoundation::stringtoidentifier("tps9");
        this.portalactive = gcsaver::portalactive();
        if (this.portalactive == 1) {
            gccollisionphysicsgroup::setportal(portal_trigger, "root/data/art/portals/poha/village_ripple/p_prtl", 1);
        }
        else {
            gccollisionphysicsgroup::turnoffnextarea(portal_trigger);
        }
        door_text = gcareadirector::getscriptfluffstringuint(scslosifoundation::stringtoidentifier("door"), 1, 0, 40);
        this.bossdoortext = new gs_legotext("Root/Data/Art/Fonts/BionicleFontHi", door_text, screenx * 0.5, screeny * 0.83, 0, 1.5, 256, 4, 0);
        this.bossdoortext.initfull();
        this.bossdoortext.add();
        this.bossdoortexttimer = 0.0;
        if (bettersaver::getbooleanvalue(67) == 0) {
            this.showbossdoor = 1;
            this.bkikbossdoor.show();
            this.bkikbossdoor.setalpha(0.7);
        }
        else {
            this.bkikbossdoor.hide();
        }
        return null;
    }
        
    method cleanupfull() {
        if (this.bkikbossdoor != null) {
            this.bkikbossdoor.cleanupfull();
            this.bkikbossdoor = null;
        }
        if (this.gly3door != null) {
            this.gly3door.cleanupfull();
            this.gly3door = null;
        }
        if (this.bossdoortext != null) {
            this.bossdoortext.remove();
            this.bossdoortext.cleanupfull();
            this.bossdoortext = null;
        }
        gcstaticsoundsptrarray::stoptablesound(1094);
        this.crashbandicootwarped = null;
        return null;
    }
    
    method process(param1) {
        if (this.bossdoortexttimer > 0) {
            this.bossdoortexttimer = this.bossdoortexttimer - param1.deltatime;
        }
        else if (this.bossdoortext.onscreen == 1) {
            this.bossdoortext.hide();
        }
        return null;
    }
    
    method input(param1) {
        return null;
    }
    
    method onevent(param1) {
        var portal_trigger;
        if (param1.eventid == 41) {
            if (this.portalactive == 0) {
                portal_trigger = scslosifoundation::stringtoidentifier("tps9");
                gccollisionphysicsgroup::turnonnextarea(portal_trigger, scslosifoundation::stringtoidentifier("tura"));
                gccollisionphysicsgroup::setportal(portal_trigger, "root/data/art/portals/poha/village_ripple/p_prtl", 1);
                this.portalactive = 1;
            }
        }
        else if (param1.eventid == 44) {
            if (this.parent.enterstartid == scslosifoundation::stringtoidentifier("str1") && (this.camefromglyph3area == 0)) {
                this.camefromglyph3area = 1;
                this.canhitgly3triggerplane = 1;
                this.gly3door.setpos(this.gly3door.getx(), 0 - 0.7459, this.gly3door.getz());
                debug::print("***********CAME IN FROM GLYPH 3 AREA");
            }
        }
        else if (param1.eventid == 35) {
            if (param1.args[0] == scslosifoundation::stringtoidentifier("drs0")) {
                bettersaver::setbooleanvalue(67, 1);
                this.bkikbossdoor.hide();
            }
        }
        else if (param1.eventid == 4) {
            debug::print("$$$$$$$$$$$$$$$$$$$$$ You hit triggerplane:" + scslosifoundation::identifiertostring(param1.args[0]));
            if (param1.args[0] == scslosifoundation::stringtoidentifier("tp04")) {
                if (this.canhitgly3triggerplane) {
                    this.canhitgly3triggerplane = 0;
                    this.shutgly3door();
                }
            }
        }
        else if (param1.eventid == 12) {
            if (param1.args[0] == scslosifoundation::stringtoidentifier("drs4")) {
                this.parent.level.cam.setaimode(11);
                globalclass.player.actor.setinputstate("ninp");
            }
        }
        else if (param1.eventid == 1) {
            if (param1.args[1] == scslosifoundation::stringtoidentifier("drs0")) {
                if (this.showbossdoor == 1) {
                    if (((((globalclass.player.tokens >= 40) && (globalclass.player.maskcontrol.isselectable(2)) && (globalclass.player.maskcontrol.isselectable(10)) && (globalclass.player.actor.ishookenabled) && (globalclass.player.haselement()))))) {
                        this.bkikbossdoor.fadeout(2.0);
                        gcstaticsoundsptrarray::playtablesound(1084);
                        this.showbossdoor = 0;
                        this.bossdoortext.hide();
                    }
                    else {
                        this.bossdoortext.show();
                        this.bossdoortexttimer = 1.0;
                    }
                }
            }
        }
        else if ((param1.eventid == 4) && (this.crashbandicootwarped == 0) && (this.portalactive == 1)) {
            if (param1.args[0] == scslosifoundation::stringtoidentifier("tps9")) {
                gcstaticsoundsptrarray::playtablesound(1094);
                this.crashbandicootwarped = 1;
                debug::print("WOAH!");
            }
        }
        else if (param1.eventid == 46) {
            gccollisionphysicsgroup::spinmask(1.2);
        }
        else if (param1.eventid == 27) {
            globalclass.player.unkill();
            globalclass.player.actor.gotopos(scslosifoundation::stringtoidentifier("str0"), scslosifoundation::stringtoidentifier("lok0"));
            globalclass.player.actor.setinputstate("ninp");
            globalclass.level.cam.setaimode(11);
        }
        return null;
    }
    
    method exit() {
        this.parent = null;
        return null;
    }
    method shutgly3door() {
        var var1;
        var var2;
        globalclass.level.cam.setaimode(0);
        globalclass.level.cam.setpos(421.78, 0 - 7.13, 0 - 185.12);
        globalclass.player.actor.setinputstate("none");
        globalclass.player.actor.idle();
        var1 = this.gly3door.getx();
        var2 = this.gly3door.getz();
        this.gly3door.interpolate(var1, 0 - 7.7459, var2, 2);
        return null;
    }
}