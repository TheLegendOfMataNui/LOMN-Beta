                }   
                //Reenable player collisions with characters now that the screenwipe and respawn are finished, ending invincibility period
                globalclass.player.actor.enablecollisions();
            }

            //Cinema Play and Conversation Start event
            else if (param1.eventid == 32) {
                //Checking to make sure the grapple isn't active and if it is, return it instantly
                if (this.actor.isdraggeractive() == 1) {
                    this.actor.deactivatedragger();                
                }
                //Checking if a mask is in use and if so, turn it off and hide the hud mask element again
                if (this.maskcontrol.isactive()) {
                    this.maskcontrol.toggleactive();
                    globalclass.hud.mask.hide();
                }
            }

            //Cinema Stop event
            else if (param1.eventid == 30) {
                //Reset the player physics and the delay timer
                globalclass.player.actor.setupphysics(1.5, 0.8, 1, 0, 0);
            }
        }
        return null;
    }
    
