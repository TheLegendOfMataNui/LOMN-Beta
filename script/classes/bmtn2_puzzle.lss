class bmtn2_puzzle {
    property parent;
    property door;
    property upgradefruit3;
    property upgradefruit3_shown;
    property amaya;
    property kapura;
    property gatestone;
    
    method bmtn2_puzzle(param1) {
        this.parent = param1;
        return null;
    }
    
    method initfull() {
        var x;
        var y;
        var z;
        var tohunga;
        this.amaya = gcmodeldirector::getcharacter(scslosifoundation::stringtoidentifier("vlgr"), 0);
        this.kapura = gcmodeldirector::getcharacter(scslosifoundation::stringtoidentifier("vl01"), 0);
        this.gatestone = new lego_moveableobject("gstn");
        this.gatestone.initfull();       

        //Set Tohunga: Amaya (VLGR)
        gccharacter::settohunga(this.amaya, rgba(0, 0, 255, 255), rgba(0, 0, 255, 255), scslosifoundation::stringtoidentifier("mkaa"));
        gccharacter::setinputstate(this.amaya, scslosifoundation::stringtoidentifier("none"));
        gccharacter::setsplitanimation(this.amaya, scslosifoundation::stringtoidentifier("d003"), -1);
        gccharacter::setorientation(this.amaya, 35);
        gccharacter::addpart(this.amaya, "vlgr/sash", 1);
        gccharacter::addpart(this.amaya, "vlgr/staf", 2);
        this.door = new lego_moveableobject("door");
        this.door.initfull();
        this.door.settweakable();
        this.gatestone.hide();
        if (bettersaver::getbooleanvalue(37) == 1) {
            this.gatestone.show();
            x = this.door.getx();
            y = this.door.gety() + 9.0;
            z = this.door.getz();
            this.door.interpolate(x, y, z, 0.0);            
        }
        //Set Kapura (VL01)
        gccharacter::setkapura(this.kapura);
        this.upgradefruit3_shown = gcsaver::finditem(scslosifoundation::stringtoidentifier("fru1"));
        if (this.upgradefruit3_shown == 0) {
            this.upgradefruit3 = new lego_pickup("fru1", 0, 6, "frut", 1, 1);
            this.upgradefruit3.initfull();
        }

        
        return null;
    }
    
    method cleanupfull() {
        if (this.upgradefruit3 != null) {
            this.upgradefruit3.cleanupfull();
            this.upgradefruit3 = null;
        }
        if (this.door != null) {
            this.door.cleanupfull();
            this.door = null;
        }
        this.amaya = null;
        this.kapura = null;
        this.gatestone = null;
        return null;
    }
    
    method onevent(param1) {
        if (param1.eventid == 41) {
            if (bettersaver::getbooleanvalue(37)) {
                //Amaya Quest Complete  
                var x;
                var y;
                var z;                
                x = this.door.getx();
                y = this.door.gety() + 9.0;
                z = this.door.getz();
                this.door.interpolate(x, y, z, 1.5);
                if (this.upgradefruit3_shown == 0) {
                    this.upgradefruit3.obj.setpos(-186.008331, 126.112579, -309.441010);
                    this.upgradefruit3_shown = 1;
                }               
                this.gatestone.show();
            }
        }
        else if (param1.eventid == 3) {
            if ((param1.args[0] == scslosifoundation::stringtoidentifier("tb00")) || (param1.args[0] == scslosifoundation::stringtoidentifier("tb01"))) {
                globalclass.player.kill();
                gcstaticsoundsptrarray::playtablesound(1048);
                this.parent.level.cam.setaimode(7);
                globalclass.player.actor.setinputstate("none");
            }
        }
        else if (param1.eventid == 46) {
            gccollisionphysicsgroup::spinmask(1.2);
        }
        else if (param1.eventid == 27) {
            globalclass.player.actor.gotopos(this.parent.enterstartid, this.parent.enterlookid);
            globalclass.player.unkill();
            globalclass.player.actor.switchanimation(scslosifoundation::stringtoidentifier("g000"));
            globalclass.player.actor.setinputstate("ninp");
            this.parent.level.cam.setaimode(11);
            gccollisionphysicsgroup::toggletriggerboxentered(scslosifoundation::stringtoidentifier("tb00"), 0);
            gccollisionphysicsgroup::toggletriggerboxentered(scslosifoundation::stringtoidentifier("tb01"), 0);
        }
        return null;
    }
    
    method exit() {
        this.parent = null;
        return null;
    }
}