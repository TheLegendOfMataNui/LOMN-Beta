class lego_inventoryscreen {
    property shown;
    property skip;
    
    method lego_inventoryscreen() {
        return null;
    }
    
    method initfull() {
        this.shown = 0;
        this.skip = 0;
        return null;
    }
    
    method cleanupfull() {
        return null;
    }
    
    method show() {
        if (this.shown == 0) {
            globalclass.hud.hide();
            gcstatusscreen::showinventory();
            this.shown = 1;
            this.skip = 10;
            globalclass.pause.toggleinput(0);
            debug::print("SHOWING INVENTORY");
        }
        return null;
    }
    
    method hide() {
        if (this.shown == 1) {
            gcstatusscreen::hideinventory();
            this.initfull();
            globalclass.hud.show();
            if (globalclass.pause.ispaused == 1) {
                globalclass.pause.show();
            }
            globalclass.pause.toggleinput(1);       
            debug::print("HIDING INVENTORY");
        }
        return null;
    }
    
    method process(param1) {
        if ((this.shown == 1) && (globalclass.hud.hidden == 0)) {
            globalclass.hud.hide();
        }
        if (this.skip > 0) {
            this.skip = this.skip - 1;
        }
        return null;
    }
    
    method input(param1) {
        if ((this.shown == 1) && (this.skip == 0)) {
            if (param1.event == 2) {
                this.hide();
            }
        }
        return null;
    }
}