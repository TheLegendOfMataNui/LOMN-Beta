            if (width == 640.000000) {
                this.inventoryscreen[this.invarray].changepos(-105, 0);
            }    
            this.invarray = this.invarray + 1;
        } 
        this.shown = 1;
        globalclass.pause.toggleinput(0);
        return null;
    }
    
    method hide() {
        globalclass.hud.show();
        this.invarray = 0;

        while ((this.inventoryscreen.__length - 1) >= this.invarray) {
            this.inventoryscreen[this.invarray].hide();
            this.inventoryscreen[this.invarray].remove();
            this.inventoryscreen[this.invarray].cleanupfull();
            this.invarray = this.invarray + 1;
        }
        if (globalclass.pause.ispaused == 1) {
            globalclass.pause.show();
        }
        this.shown = 0;
        globalclass.pause.toggleinput(1);
        return null;
    }
    
    method process(param1) {
        return null;
    }
    
    method input(param1) {
        if (this.shown == 1) {
            if ((param1.event == 2) && (param1.button == 251)) {
                this.hide();
            }
        }
        return null;
    }
