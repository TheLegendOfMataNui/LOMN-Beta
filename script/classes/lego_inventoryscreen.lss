class lego_inventoryscreen {
    property inventoryscreen;
    property shown;
    
    method lego_inventoryscreen() {
        return null;
    }
    
    method initfull() {
        return null;
    }
    
    method cleanupfull() {
        this.inventoryscreen = null;
        this.shown = null;
        return null;
    }
    
    method show() {
        var width;
        width = gcgame::getresolutionwidth();
        globalclass.hud.hide();
        this.inventoryscreen = new ss_basesprite("Root/Data/Art/MenuArt/background", 0, 0, 0, 852, 480);              
        this.inventoryscreen.initfull();
        this.inventoryscreen.add();
        this.inventoryscreen.show();   
        if (width == 640.000000) {
            this.inventoryscreen.changepos(-105, 0);
        }     
        this.shown = 1;
        globalclass.pause.toggleinput(0);
        return null;
    }
    
    method hide() {
        globalclass.hud.show();
        this.inventoryscreen.hide();
        this.inventoryscreen.remove();
        this.inventoryscreen.cleanupfull();
        if (globalclass.pause.ispaused == 1) {
            globalclass.pause.show();
        }
        this.shown = 0;
        globalclass.pause.toggleinput(1);
        return null;
    }
    
    method process(param1) {
        return null;
    }
    
    method input(param1) {
        if (this.shown == 1) {
            if ((param1.event == 2) && (param1.button == 251)) {
                this.hide();
            }
        }
        return null;
    }
}