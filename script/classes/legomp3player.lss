class legomp3player {
    property handle;
    
    method legomp3player() {
        this.handle = gcgame::getmp3player();
        return null;
    }
    
    method setupforplay(audio_filepath) {
        if (this.handle != null) {
            gcmp3player::setupforplay(this.handle, audio_filepath);
        }
        return null;
    }
    
    method cleanupfordestroy() {
        if (this.handle != null) {
            gcmp3player::cleanupfordestroy(this.handle);
        }
        return null;
    }
    
    method play(int) {
        //int arg should be 0 or 1.  
        //1 = loop track
        //0 = play once
        if (int == null) {
            int = 1;
        }
        if (this.handle != null) {
            gcmp3player::play(this.handle, int);
        }
        return null;
    }
    
    method isplaying() {
        if (this.handle != null) {
            return gcmp3player::isplaying(this.handle);
        }
        return null;
    }
    
    method pause() {
        if (this.handle != null) {
            gcmp3player::pause(this.handle);
        }
        return null;
    }
    
    method stop() {
        if (this.handle != null) {
            gcmp3player::stop(this.handle);
        }
        return null;
    }
    
    method setvolume(param1) {
        if (this.handle != null) {
            gcmp3player::setvolume(this.handle, param1);
        }
        return null;
    }
    
    method setbalance(param1) {
        if (this.handle != null) {
            gcmp3player::setbalance(this.handle, param1);
        }
        return null;
    }
    
    method changefilename(audio_filepath) {
        if (this.handle != null) {
            gcmp3player::changefilename(this.handle, audio_filepath);
        }
        return null;
    }
    
    method exit() {
        if (this.handle != null) {
            gcmp3player::stop(this.handle);
            this.handle = null;
        }
        return null;
    }
}