class shrn6_puzzle {
    property parent;
    property doorarray;
    property cinema;
    property cinemadone;
    property portalactive;
    property bossdoortext1;
    property bossdoortext2;
    property bossdoortexttimer;
    property showbossdoor;
    
    method shrn6_puzzle(param1) {
        this.parent = param1;
        return null;
    }
    
    method initfull() {
        var var1;
        var vakama;
        var portal_trigger;
        var door_text;
        gcareadirector::setnearestmax(15);
        globalclass.bgmusic.changefilename("Root/Data/sounds/MusicShrine");
        globalclass.bgmusic.play(1);
        this.doorarray = [ new lego_moveableobject("drs2"), 
            new lego_moveableobject("drs3"), 
            new lego_moveableobject("drs4") ];
        var1 = 0;
        while ((this.doorarray.__length - 1) >= var1) {
            this.doorarray[var1].initfull();
            this.doorarray[var1].show();
            var1 = var1 + 1;
        }
        this.doorarray[0].hide();
        if (globalclass.player.haselement()) {
            this.doorarray[1].hide();
        }
        if (bettersaver::getbooleanvalue(70) == 0) {
            this.showbossdoor = 1;
            this.doorarray[2].setalpha(0.4);
        }
        else {
            this.doorarray[2].hide();
        }

        //Set Door Text
        this.bossdoortext1 = new gs_legotext("Root/Data/Art/Fonts/BionicleFontHi", gcareadirector::getscriptfluffstring(scslosifoundation::stringtoidentifier("door"), 1, 0) +  gcareadirector::getscriptfluffstring(scslosifoundation::stringtoidentifier("door"), 1, 1), screenx * 0.5, screeny * 0.70, 0, 1.5, 256, 4, 0);
        this.bossdoortext2 = new gs_legotext("Root/Data/Art/Fonts/BionicleFontHi", "60 " + gcareadirector::getscriptfluffstring(scslosifoundation::stringtoidentifier("door"), 1, 4), screenx * 0.5, screeny * 0.75, 0, 1.5, 256, 4, 0);
        this.bossdoortext1.initfull();
        this.bossdoortext2.initfull();
        this.bossdoortext1.add();
        this.bossdoortext2.add();
        this.bossdoortexttimer = 0.0;

        vakama = gcmodeldirector::getcharacter(scslosifoundation::stringtoidentifier("vaka"), 0);
        gccharacter::setinputstate(vakama, scslosifoundation::stringtoidentifier("none"));
        gccharacter::switchanimation(vakama, scslosifoundation::stringtoidentifier("va00"), -1);
        portal_trigger = scslosifoundation::stringtoidentifier("tps9");
        this.portalactive = gcsaver::portalactive();
        if (this.portalactive == 1) {
            gccollisionphysicsgroup::setportal(portal_trigger, "root/data/art/portals/tahu/village_ripple/t_prtl", 1);
        }
        else {
            gccollisionphysicsgroup::turnoffnextarea(portal_trigger);
        }
        if (gcsaver::findcinema(scslosifoundation::stringtoidentifier("cin3")) == 0) {
            globalclass.player.actor.deactivatedragger();
            if (globalclass.player.actor.isdraggeractive() == 0) {
                this.cinema = gccinemaengine::create();
                gccinemaengine::load(this.cinema, "cin3");
                if (globalclass.player.maskcontrol.isactive() == 1) {
                    globalclass.player.maskcontrol.toggleactive();
                }
                gccinemaengine::play(this.cinema);
            }
        }
        else {
            globalclass.player.processequipment(2);
        }
        return null;
    }
    
    method cleanupfull() {
        var var1;
        if (this.doorarray != null) {
            var1 = 0;
            while ((this.doorarray.__length - 1) >= var1) {
                this.doorarray[var1].cleanupfull();
                this.doorarray[var1] = null;
                var1 = var1 + 1;
            }
            this.doorarray = null;
        }
        if (this.bossdoortext1 != null) {
            this.bossdoortext1.remove();
            this.bossdoortext1.cleanupfull();
            this.bossdoortext1 = null;
        }
        if (this.bossdoortext2 != null) {
            this.bossdoortext2.remove();
            this.bossdoortext2.cleanupfull();
            this.bossdoortext2 = null;
        }
        this.cinema = null;
        this.portalactive = null;
        return null;
    }
    
    method exit() {
        this.parent = null;
        return null;
    }
    
    method process(param1) {
        if (this.bossdoortexttimer > 0) {
            this.bossdoortexttimer = this.bossdoortexttimer - param1.deltatime;
        }
        else if (this.bossdoortext1.onscreen == 1) {
            this.bossdoortext1.hide();
            this.bossdoortext2.hide();
        }
        return null;
    }
    
    method onevent(param1) {
        var portal_trigger;
        if (param1.eventid == 41) {
            if (this.portalactive == 0) {
                portal_trigger = scslosifoundation::stringtoidentifier("tps9");
                gccollisionphysicsgroup::setportal(portal_trigger, "root/data/art/portals/tahu/village_ripple/t_prtl", 1);
                this.portalactive = 1;
            }
        }
        else if (param1.eventid == 30) {
            globalclass.bgmusic.changefilename("Root/Data/sounds/MusicShrine");
            globalclass.bgmusic.play(1);
            globalclass.player.processequipment(2);
        }
        else if (param1.eventid == 27) {
            globalclass.player.actor.gotopos(this.parent.enterstartid, this.parent.enterlookid);
            globalclass.player.unkill();
            globalclass.player.actor.switchanimation(scslosifoundation::stringtoidentifier("t000"));
            globalclass.player.actor.setinputstate("ninp");
        }
        else if (param1.eventid == 1) {
            if (param1.args[1] == scslosifoundation::stringtoidentifier("drs4")) {
                if (this.showbossdoor == 1) {
                    if (((((globalclass.player.tokens >= 60) && (globalclass.player.maskcontrol.isselectable(5)) && (globalclass.player.maskcontrol.isselectable(1011)) && (globalclass.player.actor.ishookenabled) && (globalclass.player.haselement()))))) {
                        this.doorarray[2].fadeout(1.5);
                        gcstaticsoundsptrarray::playtablesound(1084);
                        this.showbossdoor = 0;
                        this.bossdoortext1.hide();
                        this.bossdoortext2.hide();
                    }
                    else {
                        this.bossdoortext1.show();
                        this.bossdoortext2.show();
                        this.bossdoortexttimer = 1.0;
                    }
                }
            }
        }
        else if (param1.eventid == 35) {
            if (param1.args[0] == scslosifoundation::stringtoidentifier("drs4")) {
                bettersaver::setbooleanvalue(70, 1);
                this.doorarray[2].hide();
            }
        }
        else if (param1.eventid == 21) {
            
        }        
        else if (param1.eventid == 27) {
            globalclass.player.unkill();
            globalclass.player.actor.gotopos(scslosifoundation::stringtoidentifier("str0"), scslosifoundation::stringtoidentifier("lok0"));
            globalclass.player.actor.setinputstate("ninp");
            globalclass.level.cam.setaimode(11);
        }
        return null;
    }
    
    method input(param1) {
        if ((param1.event == 2) && (param1.button == 251)) {
            if (this.cinema != null) {
                gccinemaengine::stop(this.cinema);
            }
        }
        return null;
    }
}