{
  "version": "0.2.1",
  "tasks": [
    {
      "taskName": "build",
      "taskLabel": "Build LOMN",
      "appliesTo": "/",
      "type": "launch",
      "contextType": "build",
      "command": "make",
      "workingDirectory": "${workspaceRoot}"
    },
    {
      "taskName": "rebuild",
      "taskLabel": "Rebuild LOMN",
      "appliesTo": "/",
      "type": "launch",
      "contextType": "rebuild",
      "command": "make",
      "args": [
        "rebuild"
      ],
      "workingDirectory": "${workspaceRoot}"
    },
    {
      "taskName": "clean",
      "taskLabel": "Remove LOMN Build",
      "appliesTo": "/",
      "type": "launch",
      "contextType": "clean",
      "command": "make",
      "args": [
        "clean"
      ],
      "workingDirectory": "${workspaceRoot}"
    }
  ]
}